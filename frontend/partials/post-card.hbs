<!-- Individual post card -->
<article class="gh-card group {{post_class}}">
    <a id="card-link-{{id}}" class="gh-card-link" href="{{url}}">
        <div class="gh-card-image">
            {{#if feature_image}}
                <img srcset="{{img_url feature_image size="s"}} 300w,
                        {{img_url feature_image size="m"}} 600w,
                        {{img_url feature_image size="l"}} 1000w,
                        {{img_url feature_image size="xl"}} 2000w"
                     sizes="(max-width: 1000px) 400px, 700px"
                     src="{{img_url feature_image size="m"}}"
                     alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
                />
            {{else}}
                <img id="card-image-{{id}}"
                     src="{{#match primary_tag.slug 'programming'}}{{asset "images/default_code.png"}}{{else}}{{asset
                         "images/default_photography.png"}}{{/match}}"
                     alt="{{title}}"/>
            {{/if}}
            <div class="gh-card-image-hover">
                <svg width="22" height="20" fill="none">
                    <path class="stroke-orangeSet dark:stroke-orangeSet-dark" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="m11 19-.1-.15c-.695-1.042-1.042-1.563-1.5-1.94a4 4 0 0 0-1.378-.737C7.453 16 6.827 16 5.575 16H4.2c-1.12 0-1.68 0-2.108-.218a2 2 0 0 1-.874-.874C1 14.48 1 13.92 1 12.8V4.2c0-1.12 0-1.68.218-2.108a2 2 0 0 1 .874-.874C2.52 1 3.08 1 4.2 1h.4c2.24 0 3.36 0 4.216.436a4 4 0 0 1 1.748 1.748C11 4.04 11 5.16 11 7.4M11 19V7.4M11 19l.1-.15c.695-1.042 1.042-1.563 1.5-1.94a3.999 3.999 0 0 1 1.378-.737C14.547 16 15.173 16 16.425 16H17.8c1.12 0 1.68 0 2.108-.218a2 2 0 0 0 .874-.874C21 14.48 21 13.92 21 12.8V4.2c0-1.12 0-1.68-.218-2.108a2 2 0 0 0-.874-.874C19.48 1 18.92 1 17.8 1h-.4c-2.24 0-3.36 0-4.216.436a4 4 0 0 0-1.748 1.748C11 4.04 11 5.16 11 7.4"/>
                </svg>
                Start reading
            </div>
        </div>
        <div class="gh-card-content">
            {{#primary_tag}}
                <span class="gh-post-primary-tag">
                    {{#match slug 'programming'}} {{> "icons/programming"}} {{else}} {{> "icons/photography"}}
                    {{/match}}
                    <span>{{name}}</span>
                </span>
            {{/primary_tag}}
            <h2 class="gh-card-title">{{title}}</h2>
            <p class="gh-card-excerpt">{{excerpt}}</p>
            <span class="gh-post-meta"><time datetime="{{date format="YYYY-MM-DD"}}">{{date format="D MMM YYYY"}}</time> &minus; {{reading_time}}</span>
        </div>
    </a>
    <script>parseBookmark(`{{{content}}}`, `card-link-{{id}}`, `card-image-{{id}}`)</script>
</article>
