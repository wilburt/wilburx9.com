<!-- Individual post-card -->
<article class="gh-card group {{post_class}}">
    <a id="card-link-{{id}}" class="gh-card-link" href="{{url}}">
        <div class="gh-card-image">
            {{#if feature_image}}
                <img srcset="{{img_url feature_image size="s"}} 300w,
                        {{img_url feature_image size="m"}} 600w,
                        {{img_url feature_image size="l"}} 1000w,
                        {{img_url feature_image size="xl"}} 2000w"
                     sizes="(max-width: 1000px) 400px, 700px"
                     src="{{img_url feature_image size="m"}}"
                     alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
                />
            {{else}}
                <img id="card-image-{{id}}"
                     src="{{#match primary_tag.slug 'software'}}{{asset "images/default_code.png"}}{{else}}{{asset
                         "images/default_photography.png"}}{{/match}}"
                     alt="{{title}}"/>
            {{/if}}
            <div class="gh-card-image-hover">
                <svg width="22" height="20" fill="none">
                    <path class="stroke-orangeSet dark:stroke-orangeSet-dark" stroke-linecap="round"
                          stroke-linejoin="round" stroke-width="2"
                          d="m11 19-.1-.15c-.695-1.042-1.042-1.563-1.5-1.94a4 4 0 0 0-1.378-.737C7.453 16 6.827 16 5.575 16H4.2c-1.12 0-1.68 0-2.108-.218a2 2 0 0 1-.874-.874C1 14.48 1 13.92 1 12.8V4.2c0-1.12 0-1.68.218-2.108a2 2 0 0 1 .874-.874C2.52 1 3.08 1 4.2 1h.4c2.24 0 3.36 0 4.216.436a4 4 0 0 1 1.748 1.748C11 4.04 11 5.16 11 7.4M11 19V7.4M11 19l.1-.15c.695-1.042 1.042-1.563 1.5-1.94a3.999 3.999 0 0 1 1.378-.737C14.547 16 15.173 16 16.425 16H17.8c1.12 0 1.68 0 2.108-.218a2 2 0 0 0 .874-.874C21 14.48 21 13.92 21 12.8V4.2c0-1.12 0-1.68-.218-2.108a2 2 0 0 0-.874-.874C19.48 1 18.92 1 17.8 1h-.4c-2.24 0-3.36 0-4.216.436a4 4 0 0 0-1.748 1.748C11 4.04 11 5.16 11 7.4"/>
                </svg>
                Start reading
            </div>
        </div>
        <div class="gh-card-content">
            <div class="gh-card-tags">
                {{#primary_tag}}
                    <span class="gh-post-primary-tag">
                    {{#match slug 'software'}} {{> "icons/software"}} {{else}} {{> "icons/photography"}}
                    {{/match}}
                        <span>{{name}}</span>
                </span>
                {{/primary_tag}}
                <span class="gh-post-primary-tag hidden" id="external-tag">
                    <svg width="18" height="18" viewBox="0 0 16 16" fill="none">
                        <path stroke-linecap="round" stroke-linejoin="round"
                              d="M15.5 5.5v-5m0 0h-5m5 0L8.833 7.167m-2.5-5H4.5c-1.4 0-2.1 0-2.635.272A2.5 2.5 0 0 0 .772 3.532C.5 4.066.5 4.767.5 6.167V11.5c0 1.4 0 2.1.272 2.635a2.5 2.5 0 0 0 1.093 1.092C2.4 15.5 3.1 15.5 4.5 15.5h5.333c1.4 0 2.1 0 2.635-.273a2.5 2.5 0 0 0 1.093-1.092c.272-.535.272-1.235.272-2.635V9.667"/>
                    </svg>
                <span>External</span>
            </span>
            </div>
            <h2 class="gh-card-title">{{title}}</h2>
            <p class="gh-card-excerpt">{{excerpt}}</p>
            <span class="gh-post-meta">
                <time datetime="{{date format="YYYY-MM-DD"}}">{{date format="D MMM YYYY"}}</time>
                &minus; <span id="reading-time">{{reading_time}}</span>
            </span>
        </div>
    </a>
    <script>postProcessBookmarkCard(`{{{content}}}`, `{{{tags autolink="false" visibility="internal"}}}`, `card-link-{{id}}`, `card-image-{{id}}`)</script>
</article>
